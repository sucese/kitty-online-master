<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">\

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:focusable="false"
            android:src="@drawable/bmp_add_circle_black_36dp_normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_option_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_close"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_quick_option_text"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_text_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_quick_option_album"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_album_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_album" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_quick_option_photo"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_photo_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_photo" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_quick_option_voice"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_voice_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_voice" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_quick_option_scan"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_scan_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_scan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_quick_option_note"
                style="@style/quick_option_item">

                <ImageView
                    style="@style/quick_option_img"
                    android:src="?attr/quickoption_icon_note_selector" />

                <TextView
                    style="@style/quick_option_item_text"
                    android:text="@string/quick_option_note" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>